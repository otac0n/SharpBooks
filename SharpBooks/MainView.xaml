<Window x:Class="SharpBooks.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SharpBooks" Height="370" Width="570">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" />
        </Menu>
        <TabControl Margin="10,10,10,10">
            <TabItem Header="Overview" Name="OverviewTabItem">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Width="200">
                        <Expander Margin="5,5,5,5" Header="Favorite Accounts" Content="Test"></Expander>
                        <Expander Margin="5,5,5,5" Header="Expenses, Last 30 Days" Content="Test"></Expander>
                        <Expander Margin="5,5,5,5" Header="Upcoming Payments" Content="Test"></Expander>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Width="200">
                        <Expander Margin="5,5,5,5" Header="Favorite Investments" Content="Test"></Expander>
                        <Expander Margin="5,5,5,5" Header="Budget" Content="Test"></Expander>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Accounts / Expenses" Name="AccountsTabItem">
                <Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
